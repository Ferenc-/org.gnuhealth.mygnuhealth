{
    "name": "SDL2",
    "buildsystem": "cmake-ninja",
    "builddir": true,
    "config-opts": [
        "-DCMAKE_VERBOSE_MAKEFILE=ON",
        "-DCMAKE_BUILD_TYPE:STRING=Release",
        "-DCMAKE_INSTALL_LIBDIR:PATH=lib"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/libsdl-org/SDL/releases/download/release-2.32.10/SDL2-2.32.10.tar.gz",
            "sha256": "5f5993c530f084535c65a6879e9b26ad441169b3e25d789d83287040a9ca5165",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 4781,
                "stable-only": true,
                "url-template": "https://github.com/libsdl-org/SDL_image/releases/download/release-${version}/SDL3-${version}.tar.gz"
            }
        }
    ],
    "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/*.a",
        "/lib/cmake",
        "/share/aclocal",
        "/lib/pkgconfig"
    ]
}
